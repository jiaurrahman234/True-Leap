<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".documentSearch.SearchDetailActivity">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:id="@+id/header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/appbar_layout"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/classDate"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_m" />
            <LinearLayout
                android:layout_marginHorizontal="@dimen/margin_10dp"
                android:layout_marginVertical="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_class"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/std_class"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_m" />

                <TextView
                    android:id="@+id/student_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/std_section"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_m" />

            </LinearLayout>
            <TextView
                android:id="@+id/suject_name"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Subject name"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_m" />

        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@+id/header_info"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="filename"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_m" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_m" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/spacing_m"
                    android:background="@color/grey" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>