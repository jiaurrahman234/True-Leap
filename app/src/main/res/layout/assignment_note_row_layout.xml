<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/action_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xl"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="15dp"
        app:contentPadding="@dimen/spacing_m"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/due_on"
                        android:textAlignment="textEnd"
                        android:textColor="@color/red_500"
                        android:textSize="@dimen/textsize_xs" />

                    <TextView
                        android:id="@+id/due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_time"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/red_500"
                        android:textSize="@dimen/textsize_xs" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_uploaded_on"
                        android:textStyle=""
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/textsize_xs" />

                    <TextView
                        android:id="@+id/note_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_time"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/textsize_xs" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/module_assignment"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_m" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/note_text_excerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/module_assignment"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_s" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:background="@color/text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/view_detail"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Assignment"
                    android:textStyle="italic|bold"
                    android:textColor="@color/text_color_grey"
                    android:textSize="@dimen/textsize_s" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_height="20dp"
                    android:scaleType="fitXY">
                </androidx.appcompat.widget.AppCompatImageView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
